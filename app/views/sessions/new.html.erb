<h4>Please Log in:</h4>

<div class='well'>
  <%= form_tag '/login' do |f| %>
    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= text_field_tag :password, params[:password] || '' %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-success' %>
  <% end %>  
</div>